<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}tatemono-map{% endblock %}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg: #f8f9fb;
      --surface: #fff;
      --text: #111827;
      --muted: #6b7280;
      --border: #e5e7eb;
      --brand: #f0447e;
      --line: #06c755;
      --radius: 12px;
      --shadow-soft: 0 4px 18px rgba(15, 23, 42, 0.05);
      --max-width: 980px;
    }
    * { box-sizing: border-box; }
    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      font-family: "Inter", "Noto Sans JP", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      font-size: 16px;
      line-height: 1.6;
    }
    a { color: inherit; }
    .site-header {
      position: sticky;
      top: 0;
      z-index: 20;
      background: rgba(248, 249, 251, 0.92);
      border-bottom: 1px solid var(--border);
      backdrop-filter: blur(6px);
    }
    .site-header__inner,
    .page {
      width: min(calc(100% - 28px), var(--max-width));
      margin-inline: auto;
    }
    .site-header__inner {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 13px 0;
    }
    .page {
      padding: 24px 0 56px;
    }
    .brand {
      text-decoration: none;
      font-size: 1rem;
      font-weight: 700;
      letter-spacing: .01em;
    }
    .muted { color: var(--muted); }
    .card {
      background: var(--surface);
      border-radius: var(--radius);
      box-shadow: var(--shadow-soft);
      border: 1px solid #eef1f5;
    }
    .button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      border-radius: 999px;
      padding: 12px 18px;
      border: 0;
      font-size: .95rem;
      font-weight: 600;
      min-height: 46px;
      cursor: pointer;
      position: relative;
      z-index: 5;
      pointer-events: auto;
    }
    .button--primary {
      background: #111827;
      color: #fff;
    }
    .button--line {
      background: var(--line);
      color: #fff;
      width: 100%;
      max-width: 320px;
    }
    h1, h2, h3 { line-height: 1.35; letter-spacing: .01em; }
    h1 { font-size: clamp(1.45rem, 2.8vw, 2rem); margin: 0; font-weight: 700; }
    h2 { font-size: clamp(1.12rem, 2vw, 1.35rem); margin: 0; font-weight: 600; }
    @media (max-width: 740px) {
      body { font-size: 15px; }
      .site-header__inner,
      .page { width: min(calc(100% - 18px), var(--max-width)); }
      .page { padding-top: 16px; }
    }
  </style>
  {% block extra_head %}{% endblock %}
</head>
<body>
  <header class="site-header">
    <div class="site-header__inner">
      <a class="brand" href="{{ home_href|default('index.html', true) }}">tatemono-map</a>
      {% block header_meta %}{% endblock %}
    </div>
  </header>
  <main class="page">
    {% block content %}{% endblock %}
  </main>
  {% block extra_body %}{% endblock %}
</body>
</html>
